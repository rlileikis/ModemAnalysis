<Window x:Name="MyWindow" x:Class="ModemAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModemAnalysis"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600" MinHeight="500" MinWidth="600" MaxHeight="500" MaxWidth="600" Loaded="MyWindow_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="410"></ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Port:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="20" Padding="0" Width="29"/>
        <ComboBox HorizontalAlignment="Left" Margin="44,10,0,0" VerticalAlignment="Top" Width="223" Height="20"/>
        <Button Content="Connect" Margin="272,10,10,0" VerticalAlignment="Top" Click="Button_Click_Connect" Height="20"/>
        <Button Content="Start" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="20" Click="Button_Click_Start"/>
        <Ellipse Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Right" Height="20" Margin="0,10,10,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="20" RenderTransformOrigin="0.473,0.983"/>
        <RichTextBox x:Name="richTextBox_PrintAll" HorizontalAlignment="Left" Height="334" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="400" Grid.ColumnSpan="2" IsReadOnly="True" VerticalScrollBarVisibility="Visible" Block.LineHeight="1"/>


    </Grid>
</Window>
